    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 2px;
    border-radius: 16px;
    overflow: hidden;
  }

  .betters-pdp__faq-item {
    background: #fff;
  }

  .betters-pdp__faq-question {
    width: 100%;
    background: none;
    border: none;
    text-align: left;
    padding: 24px 28px;
    font-size: 16px;
    font-weight: 600;
    color: #1E3D2F;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 16px;
    transition: background 0.2s ease;
  }

  .betters-pdp__faq-question:hover { background: #F8F4ED; }

  .betters-pdp__faq-icon {
    flex-shrink: 0;
    width: 24px;
    height: 24px;
    border-radius: 50%;
    background: #1E3D2F;
    color: #F8F4ED;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 16px;
    font-weight: 400;
    transition: transform 0.3s ease;
  }

  .betters-pdp__faq-item.open .betters-pdp__faq-icon { transform: rotate(45deg); }

  .betters-pdp__faq-answer {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.4s ease;
    padding: 0 28px;
    font-size: 15px;
    line-height: 1.75;
    color: #555;
  }

  .betters-pdp__faq-item.open .betters-pdp__faq-answer {
    max-height: 300px;
    padding-bottom: 24px;
  }

  @media (max-width: 900px) {
    .betters-pdp__highlights { grid-template-columns: repeat(2, 1fr); }
    .betters-pdp__formula { grid-template-columns: 1fr; gap: 40px; }
    .betters-pdp__process-steps { grid-template-columns: repeat(2, 1fr); }
  }

