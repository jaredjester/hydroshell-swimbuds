{% comment %} Betters ‚Äî Featured Botanicals / Ingredients {% endcomment %}

<style>
  .betters-ingredients {
    background: {{ section.settings.bg_color }};
    padding: 100px 24px;
  }

  .betters-ingredients__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .betters-ingredients__header {
    text-align: center;
    max-width: 640px;
    margin: 0 auto 72px;
  }

  .betters-section-label {
    display: inline-block;
    font-size: 11px;
    font-weight: 700;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: {{ section.settings.accent_color }};
    margin-bottom: 20px;
  }

  .betters-section-title {
    font-family: 'Georgia', 'Times New Roman', serif;
    font-size: clamp(32px, 5vw, 52px);
    font-weight: 400;
    line-height: 1.15;
    color: {{ section.settings.headline_color }};
    margin: 0 0 20px;
  }

  .betters-section-body {
    font-size: 17px;
    line-height: 1.75;
    color: {{ section.settings.body_color }};
  }

  .betters-ingredients__grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
    gap: 28px;
  }

  .betters-ingredient-card {
    background: {{ section.settings.card_bg }};
    border-radius: 20px;
    padding: 40px 32px;
    border: 1px solid rgba(30, 61, 47, 0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .betters-ingredient-card::before {
    content: '';
    position: absolute;
    top: -40px;
    right: -40px;
    width: 120px;
    height: 120px;
    border-radius: 50%;
    background: {{ section.settings.accent_color }};
    opacity: 0.06;
    transition: opacity 0.3s ease;
  }

  .betters-ingredient-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 20px 48px rgba(30, 61, 47, 0.12);
  }

  .betters-ingredient-card:hover::before {
    opacity: 0.12;
  }

  .betters-ingredient-card__icon {
    font-size: 40px;
    margin-bottom: 20px;
    display: block;
  }

  .betters-ingredient-card__name {
    font-family: 'Georgia', 'Times New Roman', serif;
    font-size: 22px;
    font-weight: 400;
    color: {{ section.settings.headline_color }};
    margin: 0 0 8px;
  }

  .betters-ingredient-card__latin {
    font-size: 12px;
    font-style: italic;
    color: {{ section.settings.accent_color }};
    margin: 0 0 16px;
    letter-spacing: 0.05em;
  }

  .betters-ingredient-card__benefit {
    display: inline-block;
    font-size: 11px;
    font-weight: 700;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: {{ section.settings.bg_color }};
    background: {{ section.settings.headline_color }};
    padding: 5px 14px;
    border-radius: 100px;
    margin-bottom: 16px;
  }

  .betters-ingredient-card__desc {
    font-size: 15px;
    line-height: 1.7;
    color: {{ section.settings.body_color }};
    margin: 0;
  }
</style>

<section class="betters-ingredients">
  <div class="betters-ingredients__container">
    <div class="betters-ingredients__header">
      <span class="betters-section-label">{{ section.settings.eyebrow }}</span>
      <h2 class="betters-section-title">{{ section.settings.title }}</h2>
      <p class="betters-section-body">{{ section.settings.subtitle }}</p>
    </div>

    <div class="betters-ingredients__grid">
      {% for block in section.blocks %}
        <div class="betters-ingredient-card" {{ block.shopify_attributes }}>
          <span class="betters-ingredient-card__icon">{{ block.settings.emoji }}</span>
          <h3 class="betters-ingredient-card__name">{{ block.settings.name }}</h3>
          <p class="betters-ingredient-card__latin">{{ block.settings.latin_name }}</p>
          <span class="betters-ingredient-card__benefit">{{ block.settings.benefit_tag }}</span>
          <p class="betters-ingredient-card__desc">{{ block.settings.description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

