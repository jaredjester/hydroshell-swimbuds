{% comment %} Betters ‚Äî Core Benefits / Science Strip {% endcomment %}

<style>
  .betters-benefits {
    background: {{ section.settings.bg_color }};
    padding: 100px 24px;
  }

  .betters-benefits__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .betters-benefits__header {
    text-align: center;
    max-width: 600px;
    margin: 0 auto 72px;
  }

  .betters-benefits__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 4px;
    border-radius: 24px;
    overflow: hidden;
  }

  .betters-benefit-tile {
    background: {{ section.settings.tile_bg }};
    padding: 56px 40px;
    position: relative;
    transition: background 0.3s ease;
  }

  .betters-benefit-tile:hover {
    background: {{ section.settings.tile_hover_bg }};
  }

  .betters-benefit-tile__icon {
    font-size: 48px;
    display: block;
    margin-bottom: 24px;
  }

  .betters-benefit-tile__title {
    font-family: 'Georgia', 'Times New Roman', serif;
    font-size: 26px;
    font-weight: 400;
    color: {{ section.settings.headline_color }};
    margin: 0 0 16px;
    line-height: 1.2;
  }

  .betters-benefit-tile__desc {
    font-size: 15px;
    line-height: 1.75;
    color: {{ section.settings.body_color }};
    margin: 0 0 28px;
  }

  .betters-benefit-tile__stat {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .betters-benefit-tile__stat-number {
    font-family: 'Georgia', 'Times New Roman', serif;
    font-size: 40px;
    font-weight: 400;
    color: {{ section.settings.accent_color }};
    line-height: 1;
  }

  .betters-benefit-tile__stat-label {
    font-size: 12px;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: {{ section.settings.body_color }};
    opacity: 0.7;
  }

  .betters-benefits__bottom-strip {
    margin-top: 56px;
    background: {{ section.settings.headline_color }};
    border-radius: 20px;
    padding: 48px 56px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 32px;
    flex-wrap: wrap;
  }

  .betters-benefits__strip-text h3 {
    font-family: 'Georgia', 'Times New Roman', serif;
    font-size: 28px;
    font-weight: 400;
    color: #F8F4ED;
    margin: 0 0 10px;
  }

  .betters-benefits__strip-text p {
    font-size: 16px;
    color: rgba(248,244,237,0.65);
    margin: 0;
  }

  .betters-benefits__strip-cta {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 16px 36px;
    background: {{ section.settings.accent_color }};
    color: #fff;
    font-size: 15px;
    font-weight: 600;
    text-decoration: none;
    border-radius: 100px;
    white-space: nowrap;
    transition: all 0.3s ease;
    flex-shrink: 0;
  }

  .betters-benefits__strip-cta:hover {
    filter: brightness(1.1);
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(196,136,46,0.35);
  }

  @media (max-width: 900px) {
    .betters-benefits__grid { grid-template-columns: 1fr; }
    .betters-benefits__bottom-strip { flex-direction: column; align-items: flex-start; }
  }
</style>

<section class="betters-benefits">
  <div class="betters-benefits__container">
    <div class="betters-benefits__header">
      <span class="betters-section-label" style="color: {{ section.settings.accent_color }};">{{ section.settings.eyebrow }}</span>
      <h2 class="betters-section-title" style="color: {{ section.settings.headline_color }};">{{ section.settings.title }}</h2>
      <p class="betters-section-body" style="color: {{ section.settings.body_color }};">{{ section.settings.subtitle }}</p>
    </div>

    <div class="betters-benefits__grid">
      {% for block in section.blocks %}
        {% if block.type == 'benefit' %}
          <div class="betters-benefit-tile" {{ block.shopify_attributes }}>
            <span class="betters-benefit-tile__icon">{{ block.settings.icon }}</span>
            <h3 class="betters-benefit-tile__title">{{ block.settings.title }}</h3>
            <p class="betters-benefit-tile__desc">{{ block.settings.description }}</p>
            {% if block.settings.stat_number != blank %}
              <div class="betters-benefit-tile__stat">
                <span class="betters-benefit-tile__stat-number">{{ block.settings.stat_number }}</span>
                <span class="betters-benefit-tile__stat-label">{{ block.settings.stat_label }}</span>
              </div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <div class="betters-benefits__bottom-strip">
      <div class="betters-benefits__strip-text">
        <h3>{{ section.settings.strip_title }}</h3>
        <p>{{ section.settings.strip_subtitle }}</p>
      </div>
      <a href="{{ section.settings.strip_cta_url }}" class="betters-benefits__strip-cta">
        {{ section.settings.strip_cta_label }}
        <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
          <path d="M3 8h10M9 4l4 4-4 4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>
    </div>
  </div>
</section>

